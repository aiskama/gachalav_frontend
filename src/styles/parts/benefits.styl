.benefits {
  display: flex;
  flex-direction: column;
  gap: 5px;
  padding: 30px;
  min-height: 190px;
  border-radius: 10px;
  +below(1024px) {
    padding 15px
    height: fit-content;
    min-height: 0;
  }

  :nth-child(1) {
    font-weight: 700;
    font-size: 1.375em;
    line-height: 34px;
    //color: var(--dark);
    background transparent !important
    //opacity: 0.7;
    +below(1024px) {
      font-size: 1em;
      line-height: 26px;
    }
  }

  :nth-child(2) {
    font-weight: 400;
    font-size: 1.125em;
    line-height: 28px;
    color: var(--white);
    background transparent !important
    +below(1024px) {
      font-size: 0.875em;
      line-height: 22px;
    }
  }
}
